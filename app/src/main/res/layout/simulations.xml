<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Se usi un ViewModel o una variabile la dichiari qui -->
        <variable
            name="viewModel"
            type="com.example.wa.presentation.simulation.SituationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- Pulsante indietro -->
        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

        <!-- Titolo della domanda -->
        <TextView
            android:id="@+id/textTitoloDomanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/backbutton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0" />

        <!-- Card con la domanda -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDomanda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FD904C"
            app:layout_constraintTop_toBottomOf="@id/textTitoloDomanda"
            app:layout_constraintBottom_toTopOf="@id/buttonCorretto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/textDomanda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pulsante SBAGLIATO -->
        <Button
            android:id="@+id/buttonSbagliato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sbagliato"
            android:backgroundTint="#FD904C"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonCorretto"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{() -> viewModel.checkAnswer(0)}" />

        <!-- Pulsante CORRETTO -->
        <Button
            android:id="@+id/buttonCorretto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Corretto"
            android:backgroundTint="#FD904C"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toEndOf="@id/buttonSbagliato"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{() -> viewModel.checkAnswer(1)}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
