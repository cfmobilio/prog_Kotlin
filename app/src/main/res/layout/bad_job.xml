<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="#FD904C"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/back"
            android:contentDescription="Indietro" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WebAware"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/user"
            android:contentDescription="Impostazioni" />
    </LinearLayout>

    <!-- IMMAGINE SEGNALETICA -->
    <ImageView
        android:id="@+id/signImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/decision_making"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TITOLO -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hai ancora un poâ€™ di strada da fare"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/signImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SOTTOTITOLO -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vuoi rivedere le domande\no rivedere le nozioni?"
        android:textSize="14sp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTTONE SPIEGAZIONI -->

    <!-- BOTTONE RIPROVA -->

    <!-- NAVIGAZIONE IN BASSO -->

    <Button
        android:id="@+id/reviewButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#FD904C"
        android:elevation="4dp"
        android:text="Rivedi le spiegazioni"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleText" />

    <Button
        android:id="@+id/retryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FD904C"
        android:elevation="4dp"
        android:text="Riprova il quiz"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewButton" />

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#FD904C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/casa"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/document"
                android:padding="12dp" />

            <TextView
                android:id="@+id/casa_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Seconda immagine e testo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/quiz"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/quiz"
                android:padding="12dp" />

            <TextView
                android:id="@+id/quiz_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Terza immagine e testo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/simulation"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/joystick"
                android:padding="12dp" />

            <TextView
                android:id="@+id/simulation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simulation"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Quarta immagine e testo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/insight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/preview"
                android:padding="12dp" />

            <TextView
                android:id="@+id/insight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Quinta immagine e testo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/eme"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/emergency"
                android:padding="12dp" />

            <TextView
                android:id="@+id/eme_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
