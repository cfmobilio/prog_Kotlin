<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="#FD904C"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/back"
            android:contentDescription="Indietro" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WebAware"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/more_vert_24dp_e3e3e3"
            android:contentDescription="Opzioni"
            android:layout_marginStart="8dp"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        android:src="@drawable/fox_logo" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mario Rossi"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImage" />

    <!-- PROGRESS BAR SECTION -->
    <ProgressBar
        android:id="@+id/profileProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:progress="33"
        android:progressTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileName" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="3/9 badge sbloccati (33%)"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileProgressBar" />

    <TextView
        android:id="@+id/badgesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="I tuoi badge"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressText" />

    <!-- ICONS -->
    <ScrollView
        android:id="@+id/badgeScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/badgesTitle"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/iconGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowOrderPreserved="false"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingBottom="32dp">

            <ImageView
                android:id="@+id/badge_lock"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/lock" />

            <ImageView
                android:id="@+id/badge_compass"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/compass" />

            <ImageView
                android:id="@+id/badge_target"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/target" />

            <ImageView
                android:id="@+id/badge_eyes"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/eyes" />

            <ImageView
                android:id="@+id/badge_banned"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/banned" />

            <ImageView
                android:id="@+id/badge_floppy_disk"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/floppy_disk" />

            <ImageView
                android:id="@+id/badge_private_detective"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/private_detective" />

            <ImageView
                android:id="@+id/badge_key"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/key" />

            <ImageView
                android:id="@+id/badge_earth"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/earth" />

            <!-- ðŸ”¥ NUOVO BADGE -->
            <ImageView
                android:id="@+id/badge_fact_check"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/fact_check" />
        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#FD904C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Prima immagine e testo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/casa"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/document"
                android:padding="12dp" />

            <TextView
                android:id="@+id/casa_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Seconda immagine e testo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/quiz"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/quiz"
                android:padding="12dp" />

            <TextView
                android:id="@+id/quiz_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Terza immagine e testo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/simulation"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/joystick"
                android:padding="12dp" />

            <TextView
                android:id="@+id/simulation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simulation"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Quarta immagine e testo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/insight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/preview"
                android:padding="12dp" />

            <TextView
                android:id="@+id/insight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Quinta immagine e testo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/eme"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/emergency"
                android:padding="12dp" />

            <TextView
                android:id="@+id/eme_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>